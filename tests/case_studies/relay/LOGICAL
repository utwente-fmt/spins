/* bedrijfstoestandskeuze systeem IRM */
/* Peter van Eijk Sept 93 */

#define __instances_tks 1
#define __instances_bediening 1
#define __instances_checks 0

bool k14_1, s1_1, k12_1, h14_1;
bool k14_2, s1_2, k12_2, h14_2;
bool dienstv;
bool stable;

proctype tks()
{
do

::	assert(
	(
	(k14_1 == (s1_1 && !k12_1)) &&
	(k12_1 == (dienstv && (!s1_1 || k12_1))) &&
	(k14_2 == (s1_2 && !k12_2)) &&
	(k12_2 == (dienstv && (!s1_2 || k12_2))) &&
	(dienstv == (k14_1 || k14_2))  ) <= !(k14_1 && k14_2))
od
}

proctype bediening()
{
do
::	k14_1=1; skip
::	k14_1=0; skip
::	k14_2=1; skip
::	k14_2=0; skip
::	k12_1=1; skip
::	k12_1=0; skip
::	k12_2=1; skip
::	k12_2=0; skip

::	s1_1=1; skip
::	s1_1=0; skip
::	s1_2=1; skip
::	s1_2=0; skip

::	dienstv=1; skip
::	dienstv=0; skip
od
}

proctype checks()
{
atomic{	stable;
/*	assert(!(k14_1 && k14_2)) /* niet twee keer dienstv lokaal */ */
	assert(!(k14_1 && k12_1)) /* niet lokaal en niet lokaal */
}
}

init
{	run tks();
	run bediening();
}


